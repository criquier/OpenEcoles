{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent()}}
    <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset("bundles/openecolesfrontoffice/css/style.css") }}"/>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block entete %}

    <section class="research">
        <div class="input-group">
            <input type="text" placeholder="Votre recherche" class="form-control">
            <input type="button" value="Rechercher" class="button-recherche"/>
        </div>
    </section>

    <section class="utilisateur">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <p class="nom_utilisateur">Bienvenue {{ app.user.username }}<a href="#" class="déploiment"> + </a> </p>
                <p><a href="{{ path('fos_user_security_logout') }}">Se déconnecter</a></p>
            {% else %}
                <p><a href="{{ path('fos_user_security_login') }}">Se Connecter</a></p>
                <p><a href="{{ path('fos_user_registration_register') }}">S'inscrire</a></p>
            {% endif %}
    </section>

{% endblock %}

{% block body %}

    <!-- Le corps de la page -->
    <div class="conteneur">

        <nav>
            {{ render(controller("OpenEcolesFrontOfficeBundle:Accueil:navigationHorizontale")) }}
        </nav>

        <!-- L'espace personnel -->
        <section class ="espace_personnel">
            <nav id="menu">
                {{ render(controller("OpenEcolesFrontOfficeBundle:Accueil:navigationVerticale")) }}
            </nav>
        </section>

        <!-- Le contenu du site pour l'utilisateur -->
        <section class ="content">
            <p style="text-align: center">Bienvenue sur le site Open Ecole - Contenu du site (aggrandissement automatique afin d'eviter les 300px-450px etc etc</p>
        </section>

        <!-- le systeme de recommandation -->
        {% block recommandation %}
        <section class ="systeme_de_recommandation">
            <p>Syst&egrave;me de recommandation !</p>
        </section>
        {% endblock %}

    </div>

{% endblock %}

{% block footer %}
    <p class="frontfooter">
        <a href="#">Qui sommes nous </a> | <a href="#">conditions d'utilisation</a> | <a href="#">partenaires</a> | <a href="#">contact</a>
        <br/>&reg;Copyright OpenEcoles 2013 tout droits r&eacute;serv&eacute;s
    </p>
{% endblock %}